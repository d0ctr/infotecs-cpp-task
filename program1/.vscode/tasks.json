{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",
        "-Werror",
        "-Wextra",
        "-pedantic",
        "-std=c++14",
        "-g",
        "-fsanitize=address",
        "-pthread",
        "${workspaceFolder}/main.cpp",
        "${workspaceFolder}/inputprocessor.cpp",
        "${workspaceFolder}/outputprocessor.cpp",
        "-o",
        "main"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$g++"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}